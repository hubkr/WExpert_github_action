<UserControl
    x:Class="WExpert.Controls.ProgressRingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="using:WExpert.ViewModels"
    Visibility="{x:Bind ViewModel.Show, Mode=OneWay}">

    <UserControl.DataContext>
        <viewModels:ProgressRingViewModel x:Name="ViewModel"/>
    </UserControl.DataContext>

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
        <Grid x:Name="ProgressRingPanel" Background="Black" Opacity=".5"/>

        <Grid Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ProgressRing x:Name="RingProgress"
                          IsActive="{x:Bind ViewModel.Active, Mode=OneWay}"
                          Grid.Column="0"
                          Style="{StaticResource WEXProgressRingStyle2}"/>
            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"
                       Text="{x:Bind ViewModel.ProgressMessage, Mode=OneWay}"
                       Foreground="White"
                       FontSize="15"/>
        </Grid>
    </Grid>
</UserControl>
