<UserControl
    x:Class="WExpert.Controls.ProgressDialogControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WExpert.Controls">

    <StackPanel Spacing="12" MinWidth="300">
        <ProgressRing IsActive="{x:Bind IsActive, Mode=OneWay}"
                      Style="{StaticResource WEXProgressRingStyle1}"
                      HorizontalAlignment="Center" />
        <TextBlock Text="{x:Bind Message, Mode=OneWay}"
                   TextAlignment="Center"
                   TextWrapping="Wrap" />
    </StackPanel>
</UserControl>
